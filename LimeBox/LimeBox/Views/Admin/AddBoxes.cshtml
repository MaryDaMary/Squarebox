@model AdminAddBoxesVM

<form style="width: 40%; margin-left: auto; margin-right: auto" asp-controller="Admin" asp-action="AddBoxes" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.BoxType"></label>
            <span asp-validation-for="@Model.BoxType"></span>
            <input class="form-control" placeholder="Namn på box" asp-for="@Model.BoxType" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.BoxPrice"></label>
            <span asp-validation-for="@Model.BoxPrice"></span>
            <input class="form-control" placeholder="Pris" asp-for="@Model.BoxPrice" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.BoxImage"></label>
            <span asp-validation-for="@Model.BoxImage"></span>
            <input class="form-control" placeholder="Bild Url" asp-for="@Model.BoxImage" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.BoxImageHeader"></label>
            <span asp-validation-for="@Model.BoxImageHeader"></span>
            <input class="form-control" placeholder="Bild Url Header" asp-for="@Model.BoxImageHeader" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.BoxDescription"></label>
            <span asp-validation-for="@Model.BoxDescription"></span>
            <textarea rows="5" class="form-control" placeholder="Beskrivning" asp-for="@Model.BoxDescription" ></textarea>
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="form-row">
            <button class="form-control" type="submit">Skapa</button>
        </div>
    </div>
</form>