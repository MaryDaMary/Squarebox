@model AccountLoginVM

@if (!Model.IsLoggedIn)
{
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
        <br />
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <br />
        <input type="submit" value="Login" />
    </form>

}
else
{
    <div>You are logged in as @Model.Username
        
    <a asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Model.ReturnUrl">Logout</a>
        </div>

    
}

