@model ManyBoxesVM

<button id="RemovFromCart">Remove from cart</button>
<button id="AddToCart">Add to cart</button>
<div id="divResult"></div>


<div class="boxinfo">

    <div>
        <img src="@Model.BoxImage">
		<h2>@Model.Boxtype</h2>
		<br/>
        @Model.BoxDescription
    </div>

</div>
<br />


<link rel="stylesheet" href="https://unpkg.com/simplebar@latest/dist/simplebar.css" />


<div id="data-simplebar">

    @foreach (var item in Model.Items)
    {

        <div>
            <a asp-area="" asp-controller="Home" asp-action="ManyBoxes" asp-route-id="@item.BoxId">
                <img src="@item.BoxImg" />
                <br />
                @item.BoxTypeName
                # @item.BoxId
            </a>

        </div>
    }
</div>
